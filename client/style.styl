*
  box-sizing border-box

html
  margin 0
  padding 0
  font-family monospace
  font-size 150%

body
  width 1050px
  padding 40px 20px
  margin auto

a
  cursor pointer
  color inherit
  text-decoration none

  &.highlight
    color #25aa7b

  &:hover
    text-decoration underline

.button
  display flex
  justify-content center
  margin 12px

  button
    width auto
    font-size 105%

textarea
  background transparent
  min-height 400px
  min-width 400px
  white-space pre-wrap
  word-wrap break-word
  max-width 100%

input, textarea
  padding 9px
  border 1px solid

.react-json-view .string-value
  white-space pre-wrap
  word-wrap break-word
  word-break break-all
  max-width 400px
  display block

nav
  text-transform uppercase
  display flex
  align-items center
  justify-content center

  & > *
    margin 0 14px

  .logo
    img
      width 3em

  a:hover
    padding 3px 6px
    background #ededed

.contracts
  padding 20px
  display flex
  flex-wrap wrap

  .contract-item
    padding 10px
    border-radius 12px
    background-color #ededed
    margin 9px 18px
    max-width 263px
    overflow hidden
    text-overflow ellipsis
    white-space pre

.contract
  & > div
    display flex

    & > *
      margin 0 10px

  header
    min-width 400px

  .simulate
    display flex
    align-items center

    a
      padding 9px 14px
      background #efefef
      border-radius 4px

  .readme
    width 450px

    & > div
      padding 20px

  .current-state
    min-width 320px

  .call-item
    display flex

    & > *
      margin 0 4px

    &.open
      flex-wrap wrap

      .body
        display flex
        margin 12px
        padding 4px
        background #efefef
        border-radius 4px

        .desc
          padding 9px
          white-space pre-wrap
          word-wrap break-word
          max-width 600px

  .nextcall
    display flex
    flex-wrap wrap

    h3
      width 100%

    label
      display block
      margin 9px

    textarea
      min-height 100px
      display block

.new-contract
  width 100%

  input, textarea
    margin-bottom 20px
    width 100%

  label
    width 100%
    margin 0 36px

  .row
    display flex

.simulator
  textarea
    min-height 200px

  .elements
    display flex

    & > *
      margin 9px 14px

    .code
      width 400px
      textarea
        width 100%

    .nextcall
      & > div
        display flex
        align-items center

        & > *:first-child
          width 160px

      textarea
        min-height 100px
        min-width 280px

    .result
      & > div
        display flex

        label
          margin-right 4px

.new-call, .new-contract
  text-align center
  display flex
  flex-direction column
  align-items center

  .bolt11
    width 400px
    white-space pre-wrap
    word-wrap break-word
