*
  box-sizing border-box

html
  margin 0
  padding 0
  font-family monospace
  font-size 150%

body
  width 1050px
  padding 40px 20px
  margin auto

a
  cursor pointer
  color inherit
  text-decoration none

  &:hover
    text-decoration underline

nav
  text-transform uppercase
  display flex
  align-content center
  justify-content center

  & > *
    margin 0 14px

  .logo
    img
      width 1em

  a:hover
    padding 3px 6px
    background #ededed

.contracts
  padding 20px
  display flex
  flex-wrap wrap

  .contract
    padding 10px
    border-radius 12px
    background-color #ededed
